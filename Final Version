  else:
    print("Sorry I do not quite understand that, please enter a valid\ninput.")
    time.sleep(4)
    os.system('clear')
    play_difficulty_secret()


### Quiz ###
def play_quiz():
    flag = False
    try:
        choice = int(input("\nWelcome To The Quiz!\nChoose your difficulty:\n(1). Easy\n(2). Medium\n(3). Hard\n(4). Go Back\nEnter Your Choice [1,2,3,4]:\n "))
        if choice < 1 or choice > 4:
            print("Invalid Choice. Enter Again")
            flag = True # raising flag
    except ValueError as e:
        print("Invalid Choice. Enter Again")
        flag = True # raising a flag
    if not flag: 
      if choice == 1:
        play_difficulty_easy()
      elif choice == 2:
       play_difficulty_medium()
      elif choice == 3:
        play_difficulty_hard()
      elif choice == 4:
        os.system('clear')
        execute()
    else:
      play_quiz()  


### Main Menu ###
def user_begin_prompt():
    print('##########################################\n')
    print('< Welcome to the Global Citizen Quiz Game! >\n')
    print('##########################################\n')
    print("             ########\n             ========\n             ###/\###\n              ##/--\##\n             #/----\#\n             ========\n              ########\n\nA. Play\nB. Quit\nC. How To Play\n")
    play = input()
    if play.lower() == 'a' or play.lower() ==  'play':
        play_quiz()
    elif play.lower() == 'b' or play.lower() == 'quit':
        print("\nHope you come back soon!")
        choice = input("\n Type 'R' to restart the game.\n Or type 'Y' to confirm quit.\n\n")
        if choice == 'r':
         for i in range (1):
             time.sleep(1)
             os.system('clear')
             execute()
        elif choice == 'y':
          os.system('clear')
          time.sleep(1)
          for i in range(5):
           print("Exiting")
           time.sleep(0.25)
           os.system('clear')
           print("Exiting.")
           time.sleep(0.25)
           os.system('clear')
           print("Exiting..")
           time.sleep(0.25)
           os.system('clear')
           print("Exiting...")
           time.sleep(0.3)
           os.system('clear') 
          print("Goodbye")
          time.sleep(1)
          os.system('clear')
          SystemExit
        else:
          print("Invalid choice. Enter again\n")
          choice = input("Type 'R' to restart the game.\n\n")
        
    elif play.lower() == 'c' or play.lower() == 'how to play':
      os.system('clear')
      print("\nTo choose your option type in the corresponding letter or number to the \nanswer you have chosen for the question or menu.\n")
      time.sleep(10)
      os.system('clear')
      execute()
    elif play.lower() == 'secret':
      play_difficulty_secret()
    else:
        print("\nHmm. I didn't quite understand that.\nPress A to play, B to quit or C for how to play the game.\n")
        time.sleep(5)
        os.system('clear')
        user_begin_prompt()
        

### starts the game ###
def execute():
    user_begin_prompt()

if __name__ == '__main__':
    execute()
  

