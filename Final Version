### Difficulties ###
def play_difficulty_easy():
  print("\n----- Easy -----")
  option = input("\nChoose Your Question (1, 2, 3). \nType 'Back' to go to the previous screen.\n")
  if option == '1':
    print("\n Easy -Q.1-")
    easy_question_1()
  elif option == '2':
    print("\n Easy -Q.2-")
    easy_question_2()
  elif option == '3':
    print("\n Easy -Q.3-")
    easy_question_3()
  elif option == 'back':
    os.system('clear')
    play_quiz()
  else:
    print("Sorry I do not quite understand that, please enter a valid \ninput.")
    time.sleep(4)
    os.system('clear')
    play_difficulty_easy()

def play_difficulty_medium():
