### Easy Questions ###
def easy_question_1():
  os.system('clear')
  print("Type in a, b or c to answer the questions or type 'back' to go back to \nthe question select menu.")
  option = input("\n- Q.1 \n\n How much plastic pollution finds\nits way into our oceans a day?\n\nA: 8 Million Pieces.\nB: 3 Million pieces.\nC: 11 Million Pieces.\n")
  if option == 'a':
    print("Correct... Next Question.")
    time.sleep(3)
    os.system('clear')
    easy_question_2()
  elif option == 'b':
    print("Sorry incorrect answer try again...")
    time.sleep(3)
    os.system('clear')
    easy_question_1()
  elif option == 'c':
    print("Sorry incorrect answer try again...")
    time.sleep(3)
    os.system('clear')
    easy_question_1()
  elif option == 'back':
    time.sleep(1)
    os.system('clear')
    play_difficulty_easy()
  else:
    print("Sorry that is an invalid input...Try again.")
    time.sleep(3)
    os.system('clear')
    easy_question_1()

